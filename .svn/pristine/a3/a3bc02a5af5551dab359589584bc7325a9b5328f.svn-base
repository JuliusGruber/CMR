html {
  overflow: auto;
}

.target{ 
   position: relative; 
	/*width : 100%;*/ 
}

/*cover caption*/
h2 { 
   position: absolute; 
   top: 0px; 
   left: 0; 
   /*width: 100%;*/ 
	z-index:100;
}

h2 span { 
   color: white; 
   font: bold 14px/28px Helvetica, Sans-Serif; 
   letter-spacing: -1px;  
   background: rgb(0, 0, 0); /* fallback color */
   background: rgba(0, 0, 0, 0.7);
   padding: 6px; 
}

h2 span.spacer {
   padding:0 5px;
   opacity: 0;
}

/*cover caption invisible on default*/
.description{
visibility: hidden;
 opacity: 0;
}

/*cover caption on hover*/
.target:hover .description {
  visibility: visible;
  opacity: 1;
}

.albumCoverContainer{
	overflow: hidden;
