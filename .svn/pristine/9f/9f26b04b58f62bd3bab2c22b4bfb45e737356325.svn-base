@charset "utf-8";
/* CSS Document */
#tagCloud {
	margin-top:30px;
	width: 638px;
	min-height: 297px;
	max-height:100%;
	background:#dddddd;
	border-top: 1px solid #a1a1a1;
	border-bottom: 1px solid #a1a1a1;
	border-left: 1px solid #a1a1a1;
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
	/*padding: 10px;*/
	font: 75% Arial, "MS Trebuchet", sans-serif;
	/*float:left;*/
	posotion:relative;
	z-index:1;
	padding: 10px;
}

.tagcloudlink {
	text-decoration: none;
}

.tagcloudlink:hover {
	text-decoration: underline;
}

.tagcloudlink:focus {
	color: #FF0000
}

.tagcloud-wrapper{
	float:left;
	overfloaw:hiden;
}


a.tagCloud span
{
  display: none;
}

a.tagCloud:hover span
{
 
  display: block;
  border: 1px solid #ddd; border-radius:4px;
  background: #efefef;
  font: 75% Arial, "MS Trebuchet", sans-serif;
  width:10%;

}	

		#selected{
    color: #FF0000
} 
		#notselected{
    color: #000000
} 

