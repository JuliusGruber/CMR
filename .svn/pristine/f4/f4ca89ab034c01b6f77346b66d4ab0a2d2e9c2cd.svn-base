.offline{
	width:100%;
	height:100%;
	background-color:grey;
	opacity:1;
	position:absolute;
	z-index:10001;
	overflow:hidden;
	top:0;
	left:0;
}

.offline .offlinetext{
	
	color:white;
	width:400px;
	height:400px;
	text-align:center;
	position:relative;
	top:50%;
    left:50%;
    margin:-200px 0 0 -200px;
}
