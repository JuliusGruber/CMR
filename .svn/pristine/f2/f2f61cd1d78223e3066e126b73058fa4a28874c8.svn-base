html {
  overflow: auto;
}

body{
	margin:0;
	top:0;	
}

.header{
	width:100%;
	height:30px;
	background: white;	
	border:solid;
	border-width:0 0 1px 0;
	border-color:#f6931f;
	padding-top: 20px;
	
	
}

.header .title{
	font-family: 'Droid Sans',sans-serif;
	color: #f6931f;
	font-size:1em;
	margin-left:20px;
	
	
}
	
.target{ 
   position: relative; 
	/*width : 100%;*/ 
}

/*cover caption*/
h2 { 
   position: absolute; 
   top: 0px; 
   left: 0; 
   /*width: 100%;*/ 
	z-index:100;
}

h2 span { 
   color: white; 
   font: bold 14px/28px Helvetica, Sans-Serif; 
   letter-spacing: -1px;  
   background: rgb(0, 0, 0); /* fallback color */
   background: rgba(0, 0, 0, 0.7);
   padding: 6px; 
   width:100%;
}

h2 span.spacer {
   padding:0 5px;
   opacity: 0;
}

/*cover caption invisible on default*/
.description{
visibility: hidden;
 opacity: 0;
 width:100%;
}

/*cover caption on hover*/
.target:hover .description {
  visibility: visible;
  opacity: 1;
}

.flip{
	overflow: hidden;
	/*border: 1px solid #a1a1a1;*/
	float:left;
	width:645px
}

.albumCoverContainer{
	overflow: hidden;
